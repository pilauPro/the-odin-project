<h1>All Articles</h1>
<table>
	<tr>
		<td><strong>Title</strong></td>
	</tr>
	<% @articles.each do |a| %>
		<tr>
			<td><%= link_to a.title, article_path(a), 
			class: 'article_title', id: "article_#{a.id}" %></td>
			<td>
				<% if a.image.exists? %>
					<%= image_tag a.image.url(:thumb) %>
				<% end %>
			</td>
		</tr>
	<% end %>
</table>
<% if logged_in? %>
	<h3><%= link_to "Create a New Article", new_article_path, class: "new_article" %></h3>
<% end %>